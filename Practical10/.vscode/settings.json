{
    "editor.fontSize": 20,//字体初始大小20
    "files.autoSave": "afterDelay",//延时后自动保存
    "editor.mouseWheelZoom": true,//按着ctrl滑动滚轮改变字体大小
    "terminal.explorerKind": "integrated",//在vscode内部显示结果
    "python.linting.flake8Enabled": true,//启用flake8语法规范检查
    "python.linting.flake8Args": 
    [
        "--max-line-length=248",
        "--extend-ignore=W292"
    ],//让flake8不那么严格（取消一些警告）
    "python.linting.pylintEnabled": false,//取消pylint检查
    "python.formatting.provider": "yapf",//yapf自动排版
    "files.autoGuessEncoding": true,//代码自动补全
    "files.encoding": "utf8"//编码格式设置
}